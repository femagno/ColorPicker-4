<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ColorPickerPalette">
        <attr name="gravity" format="enum">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
        <attr name="size" format="enum">
            <enum name="Small" value="0"/>
            <enum name="Large" value="1"/>
        </attr>
        <attr name="maxColumns" format="integer" />
        <attr name="colors" format="reference" />
        <attr name="circleSize" format="dimension" />
        <attr name="spacing" format="dimension" />
        <attr name="circleCheckmark" format="reference" />
    </declare-styleable>
    <declare-styleable name="ColorCircle">
        <attr name="circleColor" format="color" />
        <attr name="checked" format="boolean" />
        <attr name="checkmark" format="reference" />
    </declare-styleable>
</resources>
